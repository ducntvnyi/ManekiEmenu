<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- style textView header font-->
    <style name="tvTabHeaderStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_tab_header</item>
        <item name="android:padding">@dimen/padding_item</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/holo_white</item>
    </style>

    <style name="tvTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:padding">@dimen/padding_content</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="tvContentStyle" parent="tvTitleStyle">
        <item name="android:textSize">@dimen/font_size_content</item>
    </style>

    <style name="tvLabelStyle" parent="tvContentStyle">
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="tvLabelValueStyle" parent="tvContentStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawableRight">@mipmap/ic_down_active</item>
        <item name="android:drawablePadding">@dimen/padding_content</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/half_black</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="lineHorizontalStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_gray</item>
    </style>
    <style name="lineHorizontalBlackStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_black</item>
    </style>


    <style name="tableRowConfigStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/padding_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/bg_tbl_confirm_selector</item>
    </style>

    <style name="tvMoneyTotalStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_description</item>

    </style>
</resources>
