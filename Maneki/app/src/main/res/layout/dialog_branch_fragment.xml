<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <com.vnyi.emenu.maneki.customviews.TextViewFont
            android:id="@+id/tvTitle"
            style="@style/tvTitleStyle"
            android:layout_width="match_parent"
            android:background="@color/color_app"
            android:gravity="center"
            android:maxLines="1"
            android:padding="@dimen/margin_layout"
            android:text="@string/choose_branch"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_tab_header"
            app:font="@string/font_cour" />

        <View style="@style/lineHorizontalStyle" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvBranchList"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="@dimen/padding_content" />
    </LinearLayout>
</LinearLayout>