<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:padding="@dimen/padding_content">

    <ImageView
        android:id="@+id/ivCartItem"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_app" />

    <com.vnyi.emenu.maneki.customviews.TextViewFont
        android:id="@+id/tvItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvPrice"
        android:layout_marginEnd="@dimen/padding_content"
        android:layout_marginStart="@dimen/padding_content"
        android:gravity="center"
        android:maxLines="2"
        android:padding="@dimen/padding_content"
        android:text="Muc hcien furai(bao)"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_title"
        app:font="@string/font_cour" />

    <com.vnyi.emenu.maneki.customviews.TextViewFont
        android:id="@+id/tvPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/padding_content"
        android:layout_marginEnd="@dimen/margin_layout_default"
        android:layout_marginStart="@dimen/margin_layout_default"
        android:background="@mipmap/bg_btn_red"
        android:gravity="center"
        android:maxLines="1"
        android:padding="@dimen/padding_content"
        android:text="59,000"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_title"
        app:font="@string/font_cour" />
    <ImageView
        android:id="@+id/ivCartItemTemp"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_app" />

</RelativeLayout>